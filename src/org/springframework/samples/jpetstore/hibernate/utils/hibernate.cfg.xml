<?xml version='1.0' encoding='GB18030'?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<!-- Generated by MyEclipse Hibernate Tools.  -->
<hibernate-configuration>
  
  <session-factory>
    <property name="connection.username">jpetstore</property>
    <property name="connection.url">
      jdbc:mysql://localhost:3306/hjpetstore
    </property>
    <property name="dialect">
      org.hibernate.dialect.MySQLDialect
    </property>
    <property name="connection.password">jpetstore</property>
    <property name="connection.driver_class">
      com.mysql.jdbc.Driver
    </property>
    
    <property name="current_session_context_class">thread</property>
    <property name="show_sql">true</property>
    <property name="format_sql">true</property>
    
    <!-- create: drop all tables from the schema, then re-create all tables,
			when the SessionFactory is build -->
    <property name="hbm2ddl.auto">update</property>
    
    <!-- Use the Hibernate built-in pool for tests. -->
    <property name="connection.pool_size">3</property>
    
    <!-- Disable second-level cache, effectively -->
    <property name="cache.provider_class">
      org.hibernate.cache.NoCacheProvider
    </property>
    <property name="cache.use_query_cache">false</property>
    <property name="cache.use_minimal_puts">false</property>
    <property name="max_fetch_depth">3</property>
    <!-- Batch inserts are currently broken, no idea why... -->
    <property name="jdbc.batch_size">0</property>
        
    <mapping resource="org/springframework/samples/jpetstore/domain/Account.hbm.xml" />
    <mapping resource="org/springframework/samples/jpetstore/domain/Banner.hbm.xml" />
    <mapping resource="org/springframework/samples/jpetstore/domain/Category.hbm.xml" />
    <mapping resource="org/springframework/samples/jpetstore/domain/Inventory.hbm.xml" />
    <mapping resource="org/springframework/samples/jpetstore/domain/Item.hbm.xml" />
    <mapping resource="org/springframework/samples/jpetstore/domain/LineItem.hbm.xml" />
    <mapping resource="org/springframework/samples/jpetstore/domain/Order.hbm.xml" />
    <mapping resource="org/springframework/samples/jpetstore/domain/Product.hbm.xml" />
    <mapping resource="org/springframework/samples/jpetstore/domain/Supplier.hbm.xml" />
  </session-factory>
  
</hibernate-configuration>